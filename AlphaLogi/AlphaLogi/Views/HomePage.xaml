<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AlphaLogi.Views.HomePage">

    <NavigationPage.TitleView>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label x:Name="labelTitle"
                   Text="Alpha Logi"
                   TextColor="White"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <StackLayout Margin="10">
        

        <Image x:Name="takenImage"
               Aspect="AspectFit"/>
        <ActivityIndicator Color="Purple"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           IsVisible="False"
                           IsRunning="False"
                           x:Name="predictionIndicator"/>
        <Label x:Name="labelPredictionName"
               FontSize="Medium"
               TextColor="Black"/>

        <Label x:Name="labelPrediction"
               FontSize="Medium"
               TextColor="Black"/>

        <Button x:Name="takePhotoButton"
                BackgroundColor="Purple"
                Text="Fotoğraf Çek"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="20"
                ImageSource="camera"
                Clicked="takePhotoButton_Clicked"/>
    </StackLayout>
</ContentPage>
